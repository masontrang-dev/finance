// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model for authentication
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  creditCards      CreditCard[]
  bankAccounts     BankAccount[]
  portfolios       Portfolio[]
  netWorthSnapshots NetWorthSnapshot[]
  deposits         Deposit[]

  @@map("users")
}

// Credit Card model
model CreditCard {
  id             String   @id @default(uuid())
  userId         String
  name           String
  currentBalance Float    @default(0)
  totalBalance   Float    @default(0)
  dueDate        DateTime
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Relations
  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  payments Payment[]

  @@map("credit_cards")
}

// Payment model for credit card payments
model Payment {
  id           String   @id @default(uuid())
  creditCardId String
  amount       Float
  paymentDate  DateTime
  notes        String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  creditCard CreditCard @relation(fields: [creditCardId], references: [id], onDelete: Cascade)

  @@map("payments")
}

// Bank Account model
model BankAccount {
  id             String   @id @default(uuid())
  userId         String
  name           String
  currentBalance Float    @default(0)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("bank_accounts")
}

// Deposit model for future deposits
model Deposit {
  id          String   @id @default(uuid())
  userId      String
  amount      Float
  depositDate DateTime
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("deposits")
}

// Portfolio model
model Portfolio {
  id        String   @id @default(uuid())
  userId    String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user      User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  snapshots PortfolioSnapshot[]

  @@map("portfolios")
}

// Portfolio Snapshot model for daily balances
model PortfolioSnapshot {
  id           String   @id @default(uuid())
  portfolioId  String
  balance      Float
  snapshotDate DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  portfolio Portfolio @relation(fields: [portfolioId], references: [id], onDelete: Cascade)

  // Ensure only one snapshot per portfolio per date
  @@unique([portfolioId, snapshotDate])
  @@map("portfolio_snapshots")
}

// Net Worth Snapshot model
model NetWorthSnapshot {
  id           String   @id @default(uuid())
  userId       String
  totalAssets  Float
  totalDebts   Float
  netWorth     Float
  snapshotDate DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("net_worth_snapshots")
}
